<div class="page-header">
  <h3>Survey: <%= @question.name %> <small>Response Summary</small></h3>
</div>



<!-- A Question has many responses -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Survey Responses
      </li>

      <% @choice1 = 0 %>
      <% @choice2 = 0 %>

      <% @question.responses.each do |response| %>
        <li class="list-group-item">
          <a href="/responses/<%= response.id %>">
            <%= response.selection %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/responses/<%= response.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/responses/<%= response.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_response/<%= response.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>

        <% if response.selection == @question.option_1 %>
        <% @choice1 = @choice1 + 1 %>
        <% else %>
        <% @choice2 = @choice2 + 1 %>

        <%end%>

      <% end %>

